            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <!-- here the phase you need -->
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy file="${basedir}/target/${project.name}-${project.version}.jar"
                                      tofile="${basedir}/target/${jar.name}-${git.branch}.jar" />
                                <copy todir="${basedir}/target/../../../../../pluginLibs/dtscript-hadoop2/"
                                      file="${basedir}/target/${jar.name}-${git.branch}.jar"/>
                                <delete>
                                    <fileset dir="${basedir}/target/../../../../../pluginLibs/dtscript-hadoop2/"
                                             includes="${jar.name}-*.jar"
                                             excludes="${jar.name}-${git.branch}.jar"/>
