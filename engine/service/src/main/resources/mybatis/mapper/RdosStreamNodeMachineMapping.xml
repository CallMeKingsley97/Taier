<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.db.mapper.RdosNodeMachineMapper">
	
	<resultMap id="rdosNodeMachineResult" type="com.dtstack.rdos.engine.db.dataobject.RdosNodeMachine">
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
    <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
    <result column="ip" property="ip" jdbcType="VARCHAR" />
    <result column="port" property="port" jdbcType="BIGINT" />
    <result column="machine_type" property="machineType" jdbcType="INTEGER" />
        <result column="app_type" property="appType" jdbcType="VARCHAR" ></result>
    <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
    </resultMap>
	
    <insert id="insert" parameterType="com.dtstack.rdos.engine.db.dataobject.RdosNodeMachine">
	replace into rdos_node_machine(gmt_create,gmt_modified,ip,port,machine_type,app_type)
	values(now(),now(),#{ip},#{port},#{machineType},#{appType})
	<selectKey resultType="long" keyProperty="id" order="AFTER">
	   SELECT LAST_INSERT_ID() AS ID
	</selectKey>
	</insert>
	
   <update id="updateMachineType" parameterType="com.dtstack.rdos.engine.db.dataobject.RdosNodeMachine">
        update rdos_node_machine set machine_type=#{machineType}, gmt_modified=now() where ip=#{ip} and port=#{port} and app_type=#{appType};
   </update>
   
   
  <update id="disableMachineNode" parameterType="com.dtstack.rdos.engine.db.dataobject.RdosNodeMachine">
    update rdos_node_machine set is_deleted = 1, gmt_modified=now() where ip=#{ip} and port=#{port} and app_type=#{appType};
  </update>

    <update id="ableMachineNode" parameterType="com.dtstack.rdos.engine.db.dataobject.RdosNodeMachine">
        update rdos_node_machine set is_deleted = 0, gmt_modified=now() where ip=#{ip} and port=#{port} and app_type=#{appType};
    </update>
   
</mapper>
