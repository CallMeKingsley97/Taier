<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.db.mapper.RdosStreamTaskMapper">
	
	<resultMap id="rdosTaskResult" type="com.dtstack.rdos.engine.db.dataobject.RdosStreamTask">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
        <result column="exec_start_time" property="execStartTime" jdbcType="TIMESTAMP"/>
        <result column="exec_end_time" property="execEndTime" jdbcType="TIMESTAMP"/>
        <result column="task_id" property="taskId" jdbcType="VARCHAR" />
        <result column="engine_task_id" property="engineTaskId" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="task_type" property="taskType" jdbcType="INTEGER" />
        <result column="compute_type" property="computeType" jdbcType="INTEGER" />
        <result column="task_params" property="taskParams" jdbcType="VARCHAR" />
        <result column="sql_text" property="sqlText" jdbcType="VARCHAR" />
        <result column="modify_user_id" property="modifyUserId" jdbcType="BIGINT" />
        <result column="create_user_id" property="createUserId" jdbcType="BIGINT" />
        <result column="version" property="version" jdbcType="BIGINT" />
        <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
        <result column="tenant_id" property="tenantId" jdbcType="BIGINT" />
        <result column="project_id" property="projectId" jdbcType="BIGINT" />
        <result column="engine_type" property="engineType" jdbcType="INTEGER"/>
    </resultMap>
	
   <update id="updateTaskStatus" parameterType="java.util.HashMap">
	   update rdos_stream_task set gmt_modified=now(),status=#{status} where task_id=#{taskId};
   </update>
   
   <update id="updateTaskEngineId" parameterType="java.util.HashMap">
	   update rdos_stream_task set gmt_modified=now(),exec_start_time=now(),exec_end_time=now(),engine_task_id=#{engineId} where task_id=#{taskId};
   </update>
   
   <update id="updateTaskEngineIdAndStatus" parameterType="java.util.HashMap">
	   update rdos_stream_task set gmt_modified=now(),exec_end_time=now(),engine_task_id=#{engineId},status=#{status} where task_id=#{taskId};
   </update>
   
   <select id="getRdosTaskByTaskId" parameterType="java.util.HashMap" resultMap="rdosTaskResult">
       select task_id, engine_task_id, name, engine_type, status from rdos_stream_task where task_id=#{taskId} and is_deleted=0;
   </select>
</mapper>
