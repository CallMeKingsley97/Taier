<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.db.mapper.RdosBatchActionLogMapper">
	
	<resultMap id="rdosActionLogResult" type="com.dtstack.rdos.engine.db.dataobject.RdosBatchActionLog">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
        <result column="job_id" property="jobId" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="action_type" property="actionType" jdbcType="INTEGER" />
        <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
        <result column="create_user_id" property="createUserId" jdbcType="BIGINT" />
        <result column="tenant_id" property="tenantId" jdbcType="BIGINT" />
        <result column="project_id" property="projectId" jdbcType="BIGINT" />
    </resultMap>
    
    <update id="updateActionStatus" parameterType="java.util.HashMap">
	   update rdos_batch_action_log set gmt_modified=now(),status=#{status} where id=#{actionLogId};
	</update>

    <select id="findActionLogById" parameterType="java.util.HashMap" resultMap="rdosActionLogResult">
        select * from rdos_batch_action_log where id=#{actionLogId} and is_deleted=0;
    </select>
</mapper>
