<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.db.mapper.RdosStreamTaskCheckpointMapper">
    <resultMap id="rdosStreamCheckpointResult" type="com.dtstack.rdos.engine.db.mapper.RdosStreamTaskCheckpointMapper">

        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
        <result column="task_id" property="taskId" jdbcType="VARCHAR"/>
        <result column="task_engine_id" property="taskEngineId" jdbcType="VARCHAR"/>
        <result column="checkpoint" property="checkpoint" jdbcType="VARCHAR"/>
        <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
    </resultMap>

    <insert id="insert">
        replace into rdos_stream_task_checkpoint( task_id, task_engine_id, checkpoint)
        values(#{task_id}, #{task_engine_id}, #{checkpoint});
    </insert>
</mapper>