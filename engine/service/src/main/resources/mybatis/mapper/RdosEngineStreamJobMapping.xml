<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.db.mapper.RdosStreamTaskMapper">
	<resultMap id="rdosTaskResult" type="com.dtstack.rdos.engine.db.dataobject.RdosEngineStreamJob">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
        <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
        <result column="exec_start_time" property="execStartTime" jdbcType="TIMESTAMP"/>
        <result column="exec_end_time" property="execEndTime" jdbcType="TIMESTAMP"/>
        <result column="task_id" property="taskId" jdbcType="VARCHAR" />
        <result column="engine_task_id" property="engineTaskId" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
        <result column="engine_log" property="engineLog" jdbcType="VARCHAR"/>
        <result column="log_info" property="logInfo" jdbcType="VARCHAR"/>
    </resultMap>
	
   <update id="updateTaskStatus" parameterType="java.util.HashMap">
	   update rdos_engine_stream_job set gmt_modified=now(),status=#{status} where task_id=#{taskId};
   </update>
   
   <update id="updateTaskEngineId" parameterType="java.util.HashMap">
	   update rdos_engine_stream_job set gmt_modified=now(),exec_start_time=now(),exec_end_time=now(),engine_task_id=#{engineId} where task_id=#{taskId};
   </update>
   
   <update id="updateTaskEngineIdAndStatus" parameterType="java.util.HashMap">
	   update rdos_engine_stream_job set gmt_modified=now(),exec_end_time=now(),engine_task_id=#{engineId},status=#{status} where task_id=#{taskId};
   </update>
   
   <select id="getRdosTaskByTaskId" parameterType="java.util.HashMap" resultMap="rdosTaskResult">
       select task_id, engine_task_id, name, engine_type, status from rdos_engine_stream_job where task_id=#{taskId} and is_deleted=0;
   </select>
   
    <update id="updateEngineLog">
        update rdos_engine_stream_job set engine_log = #{engineLog}, gmt_modified=now() where task_id = #{taskId}
    </update>
    
    <update id="updateSubmitLog">
        update rdos_engine_stream_job set log_info = #{logInfo},gmt_modified=now() where job_id = #{jobId}
    </update>
</mapper>
