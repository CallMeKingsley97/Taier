<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.entrance.db.mapper.RdosActionLogMapper">
	
	<resultMap id="rdosActionLogResult" type="com.dtstack.rdos.engine.entrance.db.dataobject.RdosActionLog">
    <id column="id" property="id" jdbcType="BIGINT" />
       <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
       <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
       <result column="task_id" property="taskId" jdbcType="VARCHAR" />
       <result column="status" property="status" jdbcType="INTEGER" />
       <result column="action_type" property="actionType" jdbcType="INTEGER" />
       <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
       <result column="is_restoration" property="isRestoration" jdbcType="INTEGER" />
       <result column="create_user_id" property="createUserId" jdbcType="BIGINT" />
       <result column="tenant_id" property="tenantId" jdbcType="BIGINT" />
    </resultMap>
    
    <update id="updateActionStatus" parameterType="java.util.HashMap">
	   update rdos_action_log set gmt_modified=now(),status=#{status} where action_log_id=#{actionLogId};
	</update>
</mapper>
