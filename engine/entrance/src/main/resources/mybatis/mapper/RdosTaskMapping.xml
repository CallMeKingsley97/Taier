<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstack.rdos.engine.entrance.db.mapper.RdosTaskMapper">
	
	<resultMap id="rdosTaskResult" type="com.dtstack.rdos.engine.entrance.db.dataobject.RdosTask">
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
    <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
    <result column="task_id" property="taskId" jdbcType="VARCHAR" />
    <result column="engine_task_id" property="engineTaskId" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="task_type" property="taskType" jdbcType="INTEGER" />
    <result column="compute_type" property="computeType" jdbcType="INTEGER" />
    <result column="store_location" property="storeLocation" jdbcType="VARCHAR" />
    <result column="task_params" property="taskParams" jdbcType="VARCHAR" />
    <result column="sql_text" property="sqlText" jdbcType="VARCHAR" />
    <result column="modify_user_id" property="modifyUserId" jdbcType="BIGINT" />
    <result column="create_user_id" property="createUserId" jdbcType="BIGINT" />
    <result column="tenant_id" property="tenantId" jdbcType="BIGINT" />
    <result column="version" property="version" jdbcType="BIGINT" />
    <result column="is_deleted" property="isDeleted" jdbcType="INTEGER" />
    </resultMap>
	
   <update id="updateTaskStatus" parameterType="java.util.HashMap">
	   update rdos_task set gmt_modified=now(),status=#{status} where task_id=#{taskId};
   </update>
   
   <update id="updateTaskEngineId" parameterType="java.util.HashMap">
	   update rdos_task set gmt_modified=now(),engine_task_id=#{engineId} where task_id=#{taskId};
   </update>
   
   <update id="updateTaskEngineIdAndStatus" parameterType="java.util.HashMap">
	   update rdos_task set gmt_modified=now(),engine_task_id=#{engineId},status=#{status} where task_id=#{taskId};
   </update>
</mapper>
